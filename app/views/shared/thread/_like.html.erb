<% if comment.liked_by?(current_user) %>
  <%= link_to post_comment_like_path(comment), method: :delete, remote: true, style: "color: red;" do %>  
    <i class="fas fa-thumbs-up"></i><%= comment.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_comment_like_path(comment), method: :post, remote: true do %>  
    <i class="fas fa-thumbs-up"></i><%= comment.likes.count %>
  <% end %>
<% end %>
